<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dangryan.tasker.MainActivity">

    <TextView
        android:text="All"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pageTitle"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/background_dark"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_below="@+id/pageTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/taskList"
            android:layout_below="@+id/pageTitle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">


            <CheckBox
                android:text="Clean my room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/task1CheckBox"
                android:layout_marginLeft="17dp"
                android:layout_marginStart="17dp"
                android:layout_marginTop="33dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <CheckBox
                android:text="Go grocery shopping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/task2CheckBox"
                android:layout_below="@+id/task1CheckBox"
                android:layout_alignLeft="@+id/task1CheckBox"
                android:layout_alignStart="@+id/task1CheckBox"/>

            <CheckBox
                android:text="Meet Maddie for lunch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/task3CheckBox"
                android:layout_below="@+id/task2CheckBox"
                android:layout_alignLeft="@+id/task2CheckBox"
                android:layout_alignStart="@+id/task2CheckBox"/>

            <CheckBox
                android:text="Do laundry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/task4CheckBox"
                android:layout_below="@+id/task3CheckBox"
                android:layout_alignLeft="@+id/task3CheckBox"
                android:layout_alignStart="@+id/task3CheckBox"/>

            <CheckBox
                android:text="Assignment #2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/task5CheckBox"
                android:layout_below="@+id/task4CheckBox"
                android:layout_alignLeft="@+id/task4CheckBox"
                android:layout_alignStart="@+id/task4CheckBox"/>

            <CheckBox
                android:text="Weekly Curation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/task6CheckBox"
                android:layout_below="@+id/task5CheckBox"
                android:layout_alignLeft="@+id/task5CheckBox"
                android:layout_alignStart="@+id/task5CheckBox"/>

            <CheckBox
                android:text="Lab #2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/task7CheckBox"
                android:layout_below="@+id/task6CheckBox"
                android:layout_alignLeft="@+id/task6CheckBox"
                android:layout_alignStart="@+id/task6CheckBox"/>

            <CheckBox
                android:text="F3: Opinion Pieces"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/task8CheckBox"
                android:layout_below="@+id/task7CheckBox"
                android:layout_alignLeft="@+id/task7CheckBox"
                android:layout_alignStart="@+id/task7CheckBox"/>

            <TextView
                android:text="2/18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/task1Date"
                android:layout_alignBaseline="@+id/task1CheckBox"
                android:layout_alignBottom="@+id/task1CheckBox"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:text="2/18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/task2Date"
                android:layout_alignBaseline="@+id/task2CheckBox"
                android:layout_alignBottom="@+id/task2CheckBox"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:text="2/19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/task3Date"
                android:layout_alignBaseline="@+id/task3CheckBox"
                android:layout_alignBottom="@+id/task3CheckBox"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:text="2/19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/task4Date"
                android:layout_alignBaseline="@+id/task4CheckBox"
                android:layout_alignBottom="@+id/task4CheckBox"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:text="2/20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/task5Date"
                android:layout_alignBaseline="@+id/task5CheckBox"
                android:layout_alignBottom="@+id/task5CheckBox"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:text="2/20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/task6Date"
                android:layout_alignBaseline="@+id/task6CheckBox"
                android:layout_alignBottom="@+id/task6CheckBox"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:text="2/23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/task8Date"
                android:layout_alignBaseline="@+id/task8CheckBox"
                android:layout_alignBottom="@+id/task8CheckBox"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:text="2/22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/task7Date"
                android:layout_alignBaseline="@+id/task7CheckBox"
                android:layout_alignBottom="@+id/task7CheckBox"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>
    </ScrollView>

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/taskAddButton"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_below="@+id/scrollView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:onClick="onNewTaskButtonClick"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="Personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/allButton"
            android:layout_toEndOf="@+id/allButton"
            android:id="@+id/personalButton"
            android:layout_weight="1"
            android:textSize="12sp"
            android:onClick="onPersonalButtonClick"/>

        <Button
            android:text="Classes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/classesButton"
            android:layout_toEndOf="@+id/classesButton"
            android:id="@+id/classesButton"
            android:layout_weight="1"
            android:textSize="12sp"
            android:onClick="onClassesButtonClick"/>

        <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/classesButton"
            android:layout_toEndOf="@+id/classesButton"
            android:id="@+id/addCategoryButton"
            android:layout_weight="1"
            android:textSize="12sp"
            android:onClick="onNewCategoryButtonClick"/>
    </LinearLayout>

</RelativeLayout>
